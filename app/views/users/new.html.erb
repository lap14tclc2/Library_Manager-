<h2>Create An Account</h2>

<%= form_for @user do |f| %>

<% if @user.errors.any? %>
    <h2>
      <%= pluralize(@user.errors.count, 'error') %>  this article from being saved:
    </h2>
      <% @user.errors.full_messages.each do |message| %>
      <div class="alert alert-danger"><%= message %></div>
      <% end %>
  <% end %>

<div class="form-group">
  <%= f.label :name %><br>
  <%= f.text_field :name, class:'form-control' %><br>
</div>

<div class="form-group">
  <%= f.label :email %><br>
  <%= f.email_field :email, class:'form-control' %><br>
</div>

<div class="form-group">
  <%= f.label :password %><br>
  <%= f.password_field :password, class:'form-control' %><br>
</div>

<div class="form-group">
  <%= f.label :password_confirmation, 'Confirmation' %><br>
  <%= f.password_field :password_confirmation, class:'form-control' %><br>
</div>

<%= f.submit 'Create My Account', class: 'btn btn-primary' %>
+<%= link_to  'Cancel', root_path, class: 'btn btn-default' %>
<% end %>